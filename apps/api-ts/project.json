{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "api-ts",
    "projectType": "application",
    "sourceRoot": "apps/api-ts/src",
    "targets": {
        "build": {
            "executor": "@nx/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "options": {
                "assets": ["apps/api-ts/src/assets"],
                "compiler": "tsc",
                "main": "apps/api-ts/src/main.ts",
                "outputPath": "dist/apps/api-ts",
                "target": "node",
                "tsConfig": "apps/api-ts/tsconfig.app.json",
                "webpackConfig": "apps/api-ts/webpack.config.js"
            }
        },
        "serve": {
            "configurations": {
                "development": {
                    "buildTarget": "api-ts:build:development"
                },
                "production": {
                    "buildTarget": "api-ts:build:production"
                }
            },
            "defaultConfiguration": "development",
            "executor": "@nx/js:node",
            "options": {
                "buildTarget": "api-ts:build"
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "codeCoverage": true,
                "detectOpenHandles": true,
                "forceExit": true,
                "jestConfig": "apps/api-ts/jest.config.ts",
                "passWithNoTests": true,
                "runInBand": false
            }
        }
    }
}
