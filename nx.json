{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "namedInputs": {
        "default": ["{projectRoot}/**/*", "sharedGlobals"],
        "production": ["default"]
    },
    "plugins": [
        {
            "plugin": "@nx/js/typescript",
            "options": {
                "typecheck": {
                    "targetName": "typecheck"
                },
                "build": {
                    "targetName": "build",
                    "configName": "tsconfig.lib.json"
                }
            }
        },
        {
            "plugin": "@nx/next/plugin",
            "options": {
                "startTargetName": "start",
                "buildTargetName": "build",
                "devTargetName": "dev",
                "serveStaticTargetName": "serve-static"
            }
        },
        {
            "plugin": "@nx/playwright/plugin",
            "options": {
                "targetName": "e2e"
            }
        },
        {
            "plugin": "@nxrocks/nx-spring-boot",
            "options": {
                "buildTargetName": "build",
                "installTargetName": "install",
                "testTargetName": "test",
                "cleanTargetName": "clean",
                "formatTargetName": "format",
                "applyFormatTargetName": "apply-format",
                "checkFormatTargetName": "check-format",
                "runTargetName": "run",
                "serveTargetName": "serve",
                "buildImageTargetName": "build-image",
                "buildInfoTargetName": "build-info"
            }
        },
        {
            "plugin": "@nx/webpack/plugin",
            "options": {
                "buildTargetName": "build",
                "serveTargetName": "serve",
                "previewTargetName": "preview",
                "buildDepsTargetName": "build-deps",
                "watchDepsTargetName": "watch-deps"
            }
        }
    ],
    "targetDefaults": {
        "e2e-ci--**/*": {
            "dependsOn": ["^build"]
        }
    },
    "generators": {
        "@nx/next": {
            "application": {
                "style": "css",
                "linter": "none"
            }
        }
    }
}
